<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mcce.SmartOffice.MobileApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
    Title="The Smart Office">
    <ScrollView>
        <Grid Padding="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Margin="0,40,0,20"
                HeightRequest="200"
                Source="/Resources/Images/logo512.png"
                WidthRequest="200" />
            <Label
                Grid.Row="1"
                Grid.ColumnSpan="3"
                Margin="0,0,0,20"
                FontAttributes="Bold"
                FontSize="30"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="The Smart Office"
                TextColor="{DynamicResource PrimaryDark}" />
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Margin="5,5,0,5"
                Background="#333"
                ContentLayout="Top"
                FontAttributes="Bold"
                HeightRequest="120"
                ImageSource="{mi:Fluent Icon=CalendarAdd16,
                                        IconColor=#444,
                                        IconSize=60}"
                Text="New Booking"
                TextColor="#444" />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Margin="5,5,0,5"
                Background="#333"
                Command="{Binding MyBookingsCommand}"
                ContentLayout="Top"
                FontAttributes="Bold"
                HeightRequest="120"
                ImageSource="{mi:Fluent Icon=CalendarLtr48,
                                        IconColor=#ac99ea,
                                        IconSize=60}"
                Text="My Bookings"
                TextColor="{DynamicResource PrimaryDark}" />
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Margin="5,5,5,5"
                Background="#333"
                ContentLayout="Top"
                FontAttributes="Bold"
                HeightRequest="120"
                ImageSource="{mi:Fluent Icon=Image32,
                                        IconColor=#444,
                                        IconSize=60}"
                Text="My Images"
                TextColor="#444" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="5,0,0,5"
                Background="#333"
                ContentLayout="Top"
                FontAttributes="Bold"
                HeightRequest="120"
                ImageSource="{mi:Fluent Icon=ContentSettings32,
                                        IconColor=#444,
                                        IconSize=60}"
                Text="My Configs"
                TextColor="#444" />
            <Button
                Grid.Row="3"
                Grid.Column="1"
                Margin="5,0,0,5"
                Background="#333"
                Command="{Binding SignOutCommand}"
                ContentLayout="Top"
                FontAttributes="Bold"
                HeightRequest="120"
                ImageSource="{mi:Fluent Icon=SignOut24,
                                        IconColor=#ac99ea,
                                        IconSize=60}"
                Text="Sign Out"
                TextColor="{DynamicResource PrimaryDark}" />
            <!--<Border
                Grid.Row="0"
                Grid.Column="0"
                Margin="5,5,0,5"
                Background="#333"
                HeightRequest="180"
                HorizontalOptions="Fill"
                StrokeThickness="0"
                VerticalOptions="Fill">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="5,5,5,5" />
