        <lvc:CartesianChart
            Grid.Row="3"
            Grid.ColumnSpan="4"
            IsVisible="{Binding WeiVisible}"
            LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
            LegendTextSize="16"
            Series="{Binding WeiSeries}"
            YAxes="{Binding WeiYAxes}" />
        <lvc:CartesianChart
            Grid.Row="3"
            Grid.ColumnSpan="4"
            IsVisible="{Binding TemperatureVisible}"
            LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
            LegendTextSize="16"
            Series="{Binding TemperatureSeries}"
            YAxes="{Binding TemperatureYAxes}" />
        <lvc:CartesianChart
            Grid.Row="3"
            Grid.ColumnSpan="4"
            IsVisible="{Binding HumidityVisible}"
            LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
            LegendTextSize="16"
            Series="{Binding HumiditySeries}"
            YAxes="{Binding HumidityYAxes}" />
        <lvc:CartesianChart
            Grid.Row="3"
            Grid.ColumnSpan="4"
            IsVisible="{Binding Co2Visible}"
            LegendBackgroundPaint="{Binding LedgendBackgroundPaint}"
            LegendTextSize="16"
            Series="{Binding Co2LevelSeries}"
            YAxes="{Binding Co2LevelYAxes}" />
        <Button
            Grid.Row="4"
            Grid.Column="0"
            Command="{Binding ShowWeiCommand}"
            CornerRadius="1"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Text="WEI" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Command="{Binding ShowTemperatureCommand}"
            CornerRadius="1"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Text="Temp" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Command="{Binding ShowHumidityCommand}"
            CornerRadius="1"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Text="Humidity" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Command="{Binding ShowCo2Command}"
            CornerRadius="1"
            HeightRequest="50"
            HorizontalOptions="FillAndExpand"
            Text="CO²" />
    </Grid>
</ContentPage>