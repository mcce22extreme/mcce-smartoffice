        <Button
            Grid.Row="4"
            Margin="10"
            BorderThickness="0"
            Command="{Binding LoginAsUserCommand}"
            Content="LOG AS USER"
            Cursor="Hand"
            FontFamily="Montserrat"
            FontSize="12"
            Foreground="White"
            Style="{StaticResource LoginButtonStyle}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Width="200"
                        Height="40"
                        Background="{TemplateBinding Background}"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button
            Grid.Row="5"
            BorderThickness="0"
            Command="{Binding LoginAsAdminCommand}"
            Content="LOG AS ADMIN"
            Cursor="Hand"
            FontFamily="Montserrat"
            FontSize="12"
            Foreground="White"
            Style="{StaticResource LoginButtonStyle}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border
                        Width="200"
                        Height="40"
                        Background="{TemplateBinding Background}"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
